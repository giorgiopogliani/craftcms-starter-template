{% set options = {
  '2xl': 'max-w-2xl',
  '3xl': 'max-w-3xl',
  '4xl': 'max-w-4xl',
  '5xl': 'max-w-5xl',
  '6xl': 'max-w-6xl',
  '7xl': 'max-w-7xl',
} %}

{% set maxWidth = options[attributes.get('max-width', '7xl')] %}

<div class="px-6 {{ class ?? '' }}">
  <div class="w-full {{ maxWidth }} mx-auto">
    {{ slot }}
  </div>
</div>
