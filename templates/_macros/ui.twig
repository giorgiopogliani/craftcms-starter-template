{% macro title(text) %}
  <div>
    <h2 class="font-bold text-2xl leading-6">{{ text }}</h2>
  </div>
{% endmacro %}

{% macro button(text) %}
  <button class="button">
    {{ text }}
  </button>
{% endmacro %}

{% macro cta(link, class = '') %}
  <a {{ link.getLinkAttributes() }} class="button {{ class }}">
    {{ link.getText() }}
  </a>
{% endmacro %}

{% macro image(asset, class = '') %}

{% endmacro %}
