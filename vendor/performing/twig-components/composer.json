{
    "name": "performing/twig-components",
    "description": "Twig components extension",
    "keywords": [
        "digital",
        "twig-components"
    ],
    "homepage": "https://github.com/giorgiopogliani/twig-components",
    "license": "MIT",
    "authors": [
        {
            "name": "Giorgio Pogliani",
            "email": "giorgiopogliani94@gmail.com",
            "homepage": "https://performingdigital.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3",
        "twig/twig": "~2.12.5 || ~2.13.1"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^2.16",
        "phpunit/phpunit": "^9.3",
        "vimeo/psalm": "^3.11"
    },
    "autoload": {
        "psr-4": {
            "Performing\\TwigComponents\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Performing\\TwigComponents\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
